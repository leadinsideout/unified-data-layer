{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      ["feat", "fix", "docs", "test", "refactor", "chore", "perf", "style"]
    ],
    "scope-enum": [
      2,
      "always",
      ["api", "db", "embeddings", "search", "upload", "deploy", "test", "docs", "security", "custom-gpt", "workflow", "mcp"]
    ],
    "subject-case": [0],
    "subject-empty": [2, "never"],
    "type-empty": [2, "never"],
    "body-max-line-length": [1, "always", 100]
  }
}
