{
  "name": "unified-data-layer",
  "version": "0.11.0",
  "description": "Unified data layer providing semantic search over coaching transcripts for AI platform integration",
  "type": "module",
  "main": "api/server.js",
  "scripts": {
    "start": "node api/server.js",
    "dev": "node --watch api/server.js",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "commit": "cz",
    "prepare": "husky"
  },
  "keywords": [
    "semantic-search",
    "vector-embeddings",
    "coaching",
    "transcripts",
    "openai",
    "supabase"
  ],
  "author": "leadinsideout",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "@supabase/supabase-js": "^2.75.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "multer": "^2.0.2",
    "openai": "^6.3.0",
    "pdf-parse": "^1.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "standard-version": "^9.5.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.js": [
      "echo '✅ JavaScript file staged'"
    ],
    "*.{json,md}": [
      "echo '✅ JSON/Markdown file staged'"
    ]
  }
}
